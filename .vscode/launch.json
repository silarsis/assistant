    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python:Gradio",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/agent",
            "windows": {
                "program": "${workspaceFolder}/.venv/Scripts/gradio.exe"
            },
            "linux": {
                "program": "${workspaceFolder}/.venv/bin/gradio"
            },
            "osx": {
                "program": "${workspaceFolder}/.venv/bin/gradio"
            },
            "args": [
                "./client_gradio.py"
            ],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": 1
            },
            "justMyCode": false,
            "envFile": "${workspaceFolder}/agent/.env"
        }
    ]
}