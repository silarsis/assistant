{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "docker-compose build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Up",
            "type": "shell",
            "command": "docker-compose up -d",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Down",
            "type": "shell",
            "command": "docker-compose down",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Logs",
            "type": "shell",
            "command": "docker-compose logs -f",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Refresh",
            "type": "shell",
            "command": "echo",
            "dependsOrder": "sequence",
            "dependsOn": ["Build", "Up", "Logs"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}