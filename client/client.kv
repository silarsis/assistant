#:kivy 2.2.0

<EchoClient>:
    hostname_entry: hostname_entry
    port_entry: port_entry
    connect_button: connect_button
    send_button: send_button
    message_entry: message_entry
    session_id_entry: session_id_entry
    response_text: response_text
    hear_thoughts_button: hear_thoughts_button
    
    StackLayout:
        orientation: 'lr-tb'
        size: root.size
        spacing: 10
        Label:
            text: 'Hostname'
            size_hint: [0.2, 0.05]
        TextInput:
            id: hostname_entry
            text: 'localhost'
            size_hint: [0.2, 0.05]
        Label:
            text: 'Port'
            size_hint: [0.2, 0.05]
        TextInput:
            id: port_entry
            text: '10000'
            size_hint: [0.2, 0.05]
        Button:
            id: connect_button
            text: 'Connect'
            size_hint: [0.2, 0.05]
            on_press: root.connect()

        Button:
            text: 'Start Listening'
            on_press: root.start_listening()
            size_hint: [0.2, 0.05]
        Button:
            id: hear_thoughts_button
            text: 'Hear Thoughts'
            on_press: root.toggle_hear_thoughts()
            size_hint: [0.2, 0.05]
        Label:
            text: 'Session ID'
            size_hint: [0.2, 0.05]
        TextInput:
            id: session_id_entry
            text: 'client'
            size_hint: [0.2, 0.05]
        Button:
            text: 'Quit'
            on_press: app.stop()
            size_hint: [0.2, 0.05]

        Label:
            text: 'Query'
            size_hint: [0.2, 0.05]
        TextInput:
            id: message_entry
            text: 'Hello Echo, how are you?'
            size_hint: [0.6, 0.4]
        BoxLayout:
            orientation: 'vertical'
            size_hint: [0.2, 0.4]
            Button:
                id: clear_button
                text: 'Clear'
                on_press: message_entry.text = ''
            Button:
                id: send_button
                disabled: True
                text: 'Send'
                on_press: root.send()

        RstDocument:
            id: response_text
            text: ''
            size_hint: [1, 0.5]
            